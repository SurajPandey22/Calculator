<body>
    <h1>Bat Ball Stump Game</h1>
    <button onclick="
    // const userchoiceMsg = ('You can choose bat')
    let randomnumber = Math.random() * 3;
    let computerChoice;
    if(randomnumber > 0 && randomnumber <= 1) {
        computerChoice = 'Bat';
        // console.log('computerChoice is Bat')
    }else if (randomnumber > 1 && randomnumber <= 2) {
        computerChoice = 'Ball'
        // console.log('computerChoice is Ball')
    } else {
        computerChoice = 'Stump'
        // console.log('computerChoice is Stump')
        
    }
    
    //  const computerchoiceMsg = (`ComputerChoice is ${computerChoice}`)
    let resultMsg;
    if (computerChoice === 'Ball') {
        resultMsg = 'user won';
    }
    else if (computerChoice === 'Bat') {
        resultMsg = 'it a tie';
    } else  if (computerChoice === 'Stump') {  
        resultMsg = 'computer has won';
    }
    alert(`You have choose bat. ComputerChoice is ${computerChoice} amd ${resultMsg}`);

    ">Bat</button>
